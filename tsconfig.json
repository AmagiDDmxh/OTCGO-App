{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.core",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2017.object",
      "es2015.promise"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*.ts",
    "src/libs/**"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
